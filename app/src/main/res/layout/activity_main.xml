<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lubimybzykac.pl.monika_lubimybzykac.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:layout_marginTop="19dp"
            app:srcCompat="@drawable/pic_1"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignStart="@+id/textView1"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <Button
            android:id="@+id/imageButton"
            android:layout_width="200px"
            android:layout_height="200px"
            android:text="ZOBACZ GALERIĘ"
            android:layout_marginTop="17dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_below="@+id/imageView"
            android:id="@+id/textView1"
            android:text="Przykładam dużą wagę do pozytywnej atmosfery spotkania, spotykam się z Tobą nie z obowiązku, lecz z przyjemności, daj mi się uwieść i delektuj się chwilami spędzonymi w moim towarzystwie a gwarantuję że po takim spotkaniu będziesz tęsknił za następnym.
Wybierając mnie, wybierasz spotkanie na najwyższym poziomie. Nie wahaj się zrobić pierwszy krok. Zadzwoń.
"            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView1"
            android:text=" Lokalizacja - Łódź
Wiek - 23
Biust - C
Wzrost - 172
Orientacja - Panowie, Panie, Pary"
            />







    </RelativeLayout>
</ScrollView>
