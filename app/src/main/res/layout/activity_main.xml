<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lubimybzykac.pl.monika_lubimybzykac.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


             <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="300dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_vertical|center_horizontal"
                app:srcCompat="@drawable/pic_1"
                 android:layout_margin="5dp"
                 android:layout_weight="10"
                />

            <Button
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ZOBACZ GALERIĘ"
                android:padding="3dip"
                android:layout_weight="10"
                />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_below="@+id/imageView"
            android:id="@+id/textView1"
            android:layout_weight="10"

            android:text="Przykładam dużą wagę do pozytywnej atmosfery spotkania, spotykam się z Tobą nie z obowiązku, lecz z przyjemności, daj mi się uwieść i delektuj się chwilami spędzonymi w moim towarzystwie a gwarantuję że po takim spotkaniu będziesz tęsknił za następnym.
Wybierając mnie, wybierasz spotkanie na najwyższym poziomie. Nie wahaj się zrobić pierwszy krok. Zadzwoń.
"            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/textView2"
            android:layout_weight="7"
            android:layout_below="@+id/textView1"
            android:text="Lokalizacja - Łódź \nWiek - 23\nBiust - C\nWzrost - 172\nOrientacja - Panowie, Panie, Pary"
            />
    </LinearLayout>
</LinearLayout>

</ScrollView>
